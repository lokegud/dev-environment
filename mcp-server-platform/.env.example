# MCP Server Platform Environment Variables

# Environment
NODE_ENV=development

# Authentication
MCP_AUTH_TOKEN=your-secure-token-here

# Database
DB_PASSWORD=your-database-password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=mcp
POSTGRES_USER=mcp

# Redis
REDIS_PASSWORD=your-redis-password
REDIS_HOST=redis
REDIS_PORT=6379

# Search API
SEARCH_API_KEY=your-search-api-key

# Vault (for secrets management)
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=your-vault-token

# TLS/SSL
TLS_ENABLED=true
TLS_CERT_PATH=/app/certs/server.crt
TLS_KEY_PATH=/app/certs/server.key

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# Server specific configurations
TERMINAL_MAX_SESSIONS=10
PUPPETEER_MAX_BROWSERS=5
SEARCH_CACHE_TTL=3600
FILESYSTEM_SANDBOX_ROOT=/mnt/data
AUTOMATION_MAX_WORKFLOWS=50

# Network
DOCKER_NETWORK_SUBNET=172.20.0.0/16
K3S_NAMESPACE=mcp-platform

# External URLs (for production)
EXTERNAL_DOMAIN=mcp.example.com
TERMINAL_URL=https://terminal.mcp.example.com
PUPPETEER_URL=https://puppeteer.mcp.example.com
SEARCH_URL=https://search.mcp.example.com
FILES_URL=https://files.mcp.example.com
AUTOMATION_URL=https://automation.mcp.example.com